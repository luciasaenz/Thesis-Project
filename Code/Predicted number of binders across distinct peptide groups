# Figure 4 – Compare the number of binder peptides for HLA-A*29:01 and HLA-B*50:01

# Load libraries
library(readxl)
library(dplyr)
library(tidyr)
library(ggplot2)

# Helper to load and label data from Excel
load_and_label <- function(file, sheet, group) {
  df <- read_excel(file, sheet = sheet)
  
  df <- df %>%
    select(
      gene_name = `Gene name`,
      binders = starts_with("Predicted total binders")
    ) %>%
    mutate(group = group)
  
  return(df)
}

# Load datasets from cleaned Excel
file <- "Binding_peptide_numbers.xlsx"
skin_b50 <- load_and_label(file, "(S)HLA-B5001", "Skin–HLA-B*50:01")
skin_a29 <- load_and_label(file, "(S)HLA-A2901", "Skin–HLA-A*29:01")
lung_b50 <- load_and_label(file, "(L)HLA-B5001", "Lung–HLA-B*50:01")
lung_a29 <- load_and_label(file, "(L)HLA-A2901", "Lung–HLA-A*29:01")
house_b50 <- load_and_label(file, "(HK)HLA-B5001", "Housekeeping–HLA-B*50:01")
house_a29 <- load_and_label(file, "(HK)HLA-A2901", "Housekeeping–HLA-A*29:01")

# Create paired subject-wise data
create_paired_group <- function(a29, b50, group_label) {
  n <- min(nrow(a29), nrow(b50))
  data.frame(
    subject = 1:n,
    A29 = a29$binders[1:n],
    B50 = b50$binders[1:n],
    protein_type = group_label
  )
}

str(skin_a29)
str(skin_b50)

skin_df <- create_paired_group(skin_a29, skin_b50, "Skin")
lung_df <- create_paired_group(lung_a29, lung_b50, "Lung")
house_df <- create_paired_group(house_a29, house_b50, "Housekeeping")

# Combine and reshape to long format
long_df <- bind_rows(skin_df, lung_df, house_df) %>%
  pivot_longer(cols = c(A29, B50), names_to = "group", values_to = "binders") %>%
  mutate(group = recode(group, "A29" = "HLA-A*29:01", "B50" = "HLA-B*50:01"))

# Run Wilcoxon tests and prepare annotation
get_pval <- function(a29, b50) {
  n <- min(nrow(a29), nrow(b50))
  wilcox.test(a29$binders[1:n], b50$binders[1:n], paired = TRUE)$p.value
}

pvals <- data.frame(
  protein_type = c("Skin", "Lung", "Housekeeping"),
  p_value = c(
    get_pval(skin_a29, skin_b50),
    get_pval(lung_a29, lung_b50),
    get_pval(house_a29, house_b50)
  )
) %>%
  mutate(
    label = case_when(
      p_value <= 0.001 ~ "***",
      p_value <= 0.01  ~ "**",
      p_value <= 0.05  ~ "*",
      TRUE ~ "ns"
    ),
    x = 1,
    xend = 2,
    y = 165,
    y_text = 167
  )

# Final plot
ggplot(long_df, aes(x = group, y = binders)) +
  geom_line(aes(group = subject), color = "gray80", alpha = 0.5, size = 0.3) +
  geom_point(aes(color = protein_type), size = 2, alpha = 0.6, position = position_jitter(width = 0.1)) +
  stat_summary(fun = median, geom = "crossbar", width = 0.4, color = "black", size = 0.5) +
  facet_wrap(~protein_type) +
  scale_color_manual(values = c(
    "Skin" = "#fc8d62",
    "Lung" = "#66c2a5",
    "Housekeeping" = "#e78ac3"
  )) +
  coord_cartesian(ylim = c(0, 170)) +
  geom_text(data = pvals, aes(x = 1.5, y = y_text, label = label), inherit.aes = FALSE, size = 6) +
  geom_segment(data = pvals, aes(x = x, xend = xend, y = y, yend = y), inherit.aes = FALSE, size = 0.6) +
  geom_segment(data = pvals, aes(x = x, xend = x, y = y, yend = y - 3), inherit.aes = FALSE, size = 0.6) +
  geom_segment(data = pvals, aes(x = xend, xend = xend, y = y, yend = y - 3), inherit.aes = FALSE, size = 0.6) +
  labs(
    x = NULL,
    y = "Predicted binders",
    title = "Predicted number of binders for HLA-A29:01 and HLA-B50:01\nacross distinct peptide groups"
  ) +
  theme_classic(base_size = 14) +
  theme(
    strip.background = element_blank(),
    strip.text = element_text(size = 12),
    axis.ticks.length = unit(0.25, "cm"),
    axis.line = element_line(color = "black"),
    axis.ticks = element_line(color = "black"),
    legend.position = "none",
    plot.title = element_text(hjust = 0.5, face = "bold")
  )
